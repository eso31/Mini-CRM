@model Mini_CRM.Models.Contact
@using HeyRed.MarkdownSharp

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div>
    <h4>Contact</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Name)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Email)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Email)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.PhoneNumber)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.PhoneNumber)
        </dd>

        @if (Model.Annotations.Count() > 0)
        {
            <dd>
                <table class="table">
                    <tr>
                        <th>Date</th>
                        <th>Description</th>
                    </tr>
                    @foreach (var item in Model.Annotations)
                {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Date)
                            </td>
                            <td>
                                @Html.Raw(new Markdown().Transform(item.Description))

                                <!--CommonMark.CommonMarkConverter.Convert("#123")-->
                            </td>
                            <td>
                                @Html.ActionLink("Edit", "Edit", "Annotations", new { id = item.Id }, null)
                                @Html.ActionLink("Delete", "Delete", "Annotations", new { id = item.Id }, null)
                            </td>
                        </tr>
                    }
                </table>
            </dd>
        }
    </dl>
</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.Id }) |
    @Html.ActionLink("Back to List", "Index")
</p>
